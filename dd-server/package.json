{
    "name": "dd-client",
    "version": "1.0.0",
    "description": "得到电子书",
    "main": "main.js",
    "scripts": {
        "vue:build": "cd ../dd-vue && npm run build",
        "vue:resouce:delete:win": "rd /s /q assets & del /q index.html log.html favicon.ico",
        "vue:resouce:delete:mac": "rm -rf assets index.html log.html favicon.ico",
        "vue:resouce:copy:win": "xcopy ..\\dd-vue\\dist .\\ /e /i /y",
        "vue:resouce:copy:mac": "cp -r ../dd-vue/dist/* ./ ",
        "dev": "node server.js",
        "prebuild:win": "npm run vue:build && npm run vue:resouce:delete:win && npm run vue:resouce:copy:win",
        "prebuild:mac": "npm run vue:build && npm run vue:resouce:delete:mac && npm run vue:resouce:copy:mac",
        "start": "npx electron .",
        "dist:win": "npm run prebuild:win && electron-builder --windows",
        "dist:mac": "npm run prebuild:mac && electron-builder --mac"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.9.0",
        "child_process": "^1.0.2",
        "cookie": "^1.0.2",
        "crypto": "^1.0.1",
        "epub-gen": "^0.1.0",
        "express": "^4.18.2",
        "fs-extra": "^11.3.0",
        "html-escaper": "^3.0.3",
        "path": "^0.12.7",
        "puppeteer": "^24.7.2",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.6",
        "svg-parser": "^2.0.4"
    },
    "devDependencies": {
        "electron": "^26.2.3",
        "electron-builder": "^23.6.0"
    },
    "build": {
        "appId": "com.example.dd-client",
        "productName": "得到电子书",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "./icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "artifactName": "ddclient_installer.${ext}"
        },
        "mac": {
            "target": [
                "pkg"
            ],
            "category": "public.app-category.productivity"
        },
        "files": [
            "main.js",
            "preload.js",
            "custom.js",
            "cookie.js",
            "server.js",
            "services/*",
            "services/**/*",
            "assets/*",
            "favicon.ico",
            "index.html",
            "log.html",
            "notice.html"
        ]
    }
}
